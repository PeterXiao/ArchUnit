{
  "name": "archunit-visual",
  "version": "0.5.0-SNAPSHOT",
  "description": "ArchUnit Visualization",
  "scripts": {
    "createJsBundle": "webpack --mode=development",
    "bundleHtml": "polymer-bundler --inline-scripts --inline-css",
    "test": "mocha -r ./src/test/app/mocha-init.js --require babel-register --reporter spec src/test/app/**/*.js",
    "watch-js": "nodemon -e js,html,json,css -w src/main/app/report -x 'npm run createJsBundle && npm run bundleHtml'",
    "lint": "eslint 'src/**/*.{js,html}'",
    "dev-web-server": "http-server -c-1 build/classes/example-report/"
  },
  "author": "Sebastian Mair <sebastian.mair@tngtech.com>, Peter Gafert <peter.gafert@tngtech.com>",
  "license": "Apache-2.0",
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "mocha": true
    },
    "globals": {
      "d3": true,
      "ShadyCSS": true
    },
    "plugins": [
      "html",
      "promise"
    ],
    "rules": {
      "curly": "error",
      "prefer-const": [
        "error",
        {
          "destructuring": "any",
          "ignoreReadBeforeAssign": false
        }
      ]
    }
  },
  "devDependencies": {
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "browserify": "^14.3.0",
    "chai": "^3.5.0",
    "css-loader": "^0.28.11",
    "eslint": "^4.1.0",
    "eslint-plugin-html": "^3.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "http-server": "^0.10.0",
    "mocha": "^3.5.3",
    "nodemon": "^1.11.0",
    "polymer-bundler": "^4.0.2",
    "style-loader": "^0.21.0",
    "web-webpack-plugin": "^1.10.4",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^1.0.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "d3": "^4.9.1"
  }
}
